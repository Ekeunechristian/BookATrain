CREATE TABLE administration (
    admin_id INT AUTO_INCREMENT PRIMARY KEY,
    firstname VARCHAR(50) NOT NULL,
    lastname VARCHAR(50) NOT NULL,
    password VARCHAR(100) NOT NULL,  
    email VARCHAR(100) NOT NULL,
    postcode VARCHAR(20),
    address VARCHAR(255),
    phone VARCHAR(20)
);
